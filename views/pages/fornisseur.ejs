<!DOCTYPE html>
<html lang="en">
  <% include ../partials/head %>
<body>
    
  <% include ../partials/header %>
     
      
      <div class="container">
        <div class="row">
          
          <div class="col-md-12"> 
            
            <div class="panel">
              <div class="panel-body">
              
                <div class="row">   
                   
            <div class="container">

               <nav class="navbar navbar-dark bg-dark">
        <span class="navbar-brand" style="color: #fff;"><a href="/" style="text-decoration: none; color: white;">Rayon</a></span>
          </nav>
             <div class="col s12" style="margin-top: 3%;">
              <% for(item of items){%>
                    <table class="table">
                    <thead>
                        <tr>
                          <th style="width: 15%;text-align: center;">id</th>
                            <th style="width: 15%;text-align: center;">Name</th>
                            <th style="width: 15%;text-align: center;">address</th>
                            <th style="width: 15%;text-align: center;">tele</th>
                            <th style="width: 15%;text-align: center;">email</th>
                           
                            <th solspan="2" style="width: 20%;text-align: center;">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                            <tr>
                              <td style="width: 15%;text-align: center;"><%= item.id_F%></td>
                              <td style="width: 15%;text-align: center;"><%= item.name %></td>
                                <td style="width: 15%;text-align: center;"><%= item.address %></td>
                                <td style="width: 15%;text-align: center;"><%= item.télé %></td>
                                <td style="width: 15%;text-align: center;"><%= item.email %></td>
                   
                                <td solspan="2" style="width: 20%;text-align: center;">
                                  <button type="submit" name="btn_edit" data-toggle="modal" data-target="" class="btn btn-success btn-sm btn-circle btnedit">
                                    Edit
                                </button>
                                    <a href="/delete-fournisseur/<%= item.id_P %>" class="btn" style="background-color: rgb(49, 175, 197); color: white;">Delete</a>
                                </td>
                            </tr>
                  
                    </tbody>
                </table>
                <%}%>
                <p><strong>other items</strong></p>
              </div>
            <div class="col s12" style="margin-top: 3%;">
                <a href="/addfornisseur" class="btn btn-info btn-lg">Add new fornisseur</a>
            </div>
             </div><!--/col-12-->
        </div>
      </div> 
      <div id="editmodal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" class="modal fade" style="display: none;">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <form  action="/editF" method="POST">
                <input type="hidden" name="id_F" id="id" class="form-control" placeholder="you text">
               <div class="form-group">
               <label for="exampleInputEmail1">name</label>
               <input type="text" name="name" value="" class="form-control" id="name" aria-describedby="emailHelp">
              </div>
              <div class="form-group">
                <label for="exampleInputEmail1">address</label>
                <input type="text" name="address" value="" class="form-control" id="address" aria-describedby="emailHelp">
               </div>
              <div class="form-group">
                <label for="exampleInputEmail1">tele</label>
                <input type="text" name="tele"  value="" class="form-control" id="tele" aria-describedby="emailHelp">
               </div>  <div class="form-group">
                <div class="form-group">
                  <label for="exampleInputEmail1">email</label>
                  <input type="email" name="email"   class="form-control" id="email" aria-describedby="emailHelp">

                 </div> 
                   
                
              </div>  
              
          
             <button type="submit"  name="submit" value="ADD" class="btn btn-primary">Ajoute</button>
        </form>   
            </div>
        </div>
    </div>                                                                           
      <% include ../partials/footer %>
      <script>
        $(document).ready(function() {
            $('.btnedit').on('click', function() {
                $('#editmodal').modal('show');
    
                $tr = $(this).closest('tr');
                var data = $tr.children("td").map(function() {
                    return $(this).text();
                }).get();
    
                console.log(data);
    
                $('#id').val(data[0]);
                $('#name').val(data[1]);
                $('#address').val(data[2]);
                $('#tele').val(data[3]);
                $('#email').val(data[4]);
    
            });
        });
    </script>
</body>
</html>